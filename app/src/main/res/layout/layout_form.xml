<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="wrap_content"
        android:orientation="horizontal"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/text_ViewLayout2_Halo"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:text="Halo"
            android:textSize="30dp"></TextView>

        <TextView
            android:id="@+id/Tv_halo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginRight="10dp"
            android:ems="10"
            android:inputType="textPersonName"
            android:text=""
            android:textSize="30dp" />

    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:orientation="horizontal"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/text_ViewLayout2_Nama"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:text="Nama"
            android:textSize="30dp"></TextView>

        <EditText
            android:id="@+id/edit_TViewLayout2_Nama"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:ems="10"
            android:hint="Nama"
            android:inputType="textPersonName"
            android:textSize="30dp" />

    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:orientation="horizontal"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/text_ViewLayout2_Nim"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:text="NIM"
            android:textSize="30dp"></TextView>

        <EditText
            android:id="@+id/edit_TViewLayout2_Nim"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:ems="10"
            android:hint="Nim"
            android:inputType="textPersonName"
            android:textSize="30dp" />

    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:orientation="horizontal"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/text_ViewLayout2_Jurusan"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:text="Jurusan"
            android:textSize="30dp"></TextView>

        <Spinner
            android:id="@+id/spiner"
            android:layout_width="240dp"

            android:layout_height="match_parent"
            android:layout_marginRight="10dp"
            android:entries="@string/app_name"></Spinner>
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:orientation="horizontal"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/text_ViewLayout2_Univ"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:text="Univ"
            android:textSize="30dp"></TextView>
        <EditText
            android:id="@+id/edit_TViewLayout2_Univ"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:textSize="30dp"
            android:inputType="textPersonName"
            android:hint="univ" />

    </LinearLayout>
    <Button
        android:id="@+id/btn_Layout2_simpan"
        android:layout_width="wrap_content"
        android:text="Simpan"
        android:layout_marginTop="50dp"
        android:layout_gravity="center"
        android:layout_height="wrap_content">
    </Button>

</LinearLayout>